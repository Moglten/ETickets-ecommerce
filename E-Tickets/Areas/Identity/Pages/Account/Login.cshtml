@page
@model LoginModel

    <body class="ambody">
      <div class="container">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
              <div class="card-body p-4 p-sm-5">
                <h5 class="card-title text-center mb-3 fw-light fs-5">Welcome Back!</h5>
                 <form id="account" method="post">
                  <div asp-validation-summary="All" class="text-danger"></div>

                  <div class="form-floating mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" type="email" class="form-control" id="floatingInput" placeholder="examble@examble.ex">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>

                  <div class="form-floating mb-3">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" id="floatingPassword" placeholder="password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                  </div>

                  <div class="form-check mb-3">
                    <label asp-for="Input.RememberMe" class="form-check-label" >
                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" >
                      Remember Me
                    </label>
                  </div>
                  <div class="col-12 text-center">
                    <button class="btn btn-success btn-login mb-2" type="submit">Sign in</button><br />
                    <a class="btn btn-outline-primary mb-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
